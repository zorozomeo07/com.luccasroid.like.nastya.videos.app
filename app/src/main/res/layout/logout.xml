<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bo_khung"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="Bạn có chắc chắn muốn thoát khỏi ứng dụng ?"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/text"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:background="@drawable/but_no"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/txt_no"
        android:text="No"
        android:gravity="center"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintRight_toRightOf="@id/txt_no"
        android:layout_marginRight="110dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/but_yes"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/txt_yes"
        android:text="Yes"
        android:gravity="center"/>



</androidx.constraintlayout.widget.ConstraintLayout>